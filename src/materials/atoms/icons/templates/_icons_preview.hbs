extends ../../layouts/_layout.jade

block moduleTitle
  | Icons

block documentation
  include:marked README.md

block content
  div.styleguide-icons__icon-list
    {{#each icons}}{{#with this}}
    div.styleguide-icons__icon
      pre
        code {{name}}
      +icon('{{name}}')
      +icon('{{name}}', 'icon--m')
      +icon('{{name}}', 'icon--l')
    {{/with}}{{/each}}
