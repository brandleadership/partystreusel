extends ../../layouts/_layout.jade

block module_header
  - var moduleTitle = 'Icons'

block content
  section.sc-content
    p.sc-lead
      strong This file is generated by Grunt.JS task. Don't change this file!
      br
      br
      Use the following helper to include a icon:
    pre +icon('NAME')
    p.sc-lead Use the modifier classes "icon--m" & "icon--l" for different sizes:
    pre +icon('NAME', 'icon--m')

    hr

    div
      pre
        code arrow-left
      +icon('arrow-left')
      +icon('arrow-left', 'icon--m')
      +icon('arrow-left', 'icon--l')
    hr
    div
      pre
        code arrow-right
      +icon('arrow-right')
      +icon('arrow-right', 'icon--m')
      +icon('arrow-right', 'icon--l')
    hr
    div
      pre
        code close
      +icon('close')
      +icon('close', 'icon--m')
      +icon('close', 'icon--l')
    hr
    div
      pre
        code download
      +icon('download')
      +icon('download', 'icon--m')
      +icon('download', 'icon--l')
    hr
    div
      pre
        code folder
      +icon('folder')
      +icon('folder', 'icon--m')
      +icon('folder', 'icon--l')
    hr
    div
      pre
        code menu
      +icon('menu')
      +icon('menu', 'icon--m')
      +icon('menu', 'icon--l')
    hr
    div
      pre
        code search
      +icon('search')
      +icon('search', 'icon--m')
      +icon('search', 'icon--l')
    hr
