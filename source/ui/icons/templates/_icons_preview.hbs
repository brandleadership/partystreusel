extends ../../layouts/_layout.jade

block module_header
  - var moduleTitle = 'Icons'

block content
  section.sc-content
    p.sc-lead
      strong This file is generated by Grunt.JS task. Don't change this file!
      br
      br
      Use the following helper to include a icon:
    pre +icon('NAME')
    p.sc-lead Use the modifier classes "icon--m" & "icon--l" for different sizes:
    pre +icon('NAME', 'icon--m')

    hr
    {{#each icons}}{{#with this}}
    div
      pre
        code {{name}}
      +icon('{{name}}')
      +icon('{{name}}', 'icon--m')
      +icon('{{name}}', 'icon--l')
    hr{{/with}}{{/each}}
