    %div
      %pre
        %code Small: .button.button--small
      %a.button.button--small{href: '#'} LinkButton Small
      %button.button.button--small{href: '#'} Button Small
    %hr.sc-hr-alternate
    %div
      %pre
        %code Button Group: div.button__group around buttons
      .button__group{ role: "group", :'aria-label' => "..." }
        %a.button{href: '#'} Button in Group 1
        %a.button{href: '#'} Button in Group 2
        %a.button{href: '#'} Button in Group 3

    %hr.sc-hr-alternate
    %div
      %pre
        %code All Buttons types with Icons inside
      %a.button{href: '#'}
        Button with Icon
        - streusel_icon( 'download')
      %a.button.button--secondary{href: '#'}
        - streusel_icon( 'download')
        Button with Icon
      %a.button.button--tertiary{href: '#'}
        - streusel_icon( 'download')
