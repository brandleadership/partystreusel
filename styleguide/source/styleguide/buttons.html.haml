  %header
    %h1 Buttons
    %a{ href: '/styleguide/' } Back to Index
  %hr
  %section
    %div
      %pre
        %code Default: .button
      %a.button{href: '#'} LinkButton 1
      %button.button{href: '#'} Button 1
    %hr.sc-hr-alternate
    %div
      %pre
        %code Secondary: .button.button--secondary
      %a.button.button--secondary{href: '#'} LinkButton 2
      %button.button.button--secondary{href: '#'} Button 2
    %hr.sc-hr-alternate
    %div
      %pre
        %code Tertiary: .button.button--tertiary
      %a.button.button--tertiary{href: '#'} LinkButton 3
      %button.button.button--tertiary{href: '#'} Button 3
    %hr.sc-hr-alternate
    %div
      %pre
        %code Icon: .button.button--icon
      %a.button.button--icon{href: '#'}
        - streusel_icon( 'folder')
      %button.button.button--icon{href: '#'}
        - streusel_icon( 'folder')

    %hr.sc-hr-alternate
    %div
      %pre
        %code Expanded: .button.button--expanded
      %a.button.button--expanded{href: '#'} Linkbutton Expanded
      %button.button.button--expanded{href: '#'} Linkbutton Expanded
